<% if session[:user_id] %>
  <%= link_to_remote "Logout", :url => {:action => "logout"} %>
<% else %>
  <% form_remote_tag(:url => {:action => "login"}) do -%>
    Username <%= text_field_tag "username" %>
    Password <%= password_field_tag "password" %>
    <%= submit_tag "Login" %>
  <% end %>
<% end %>